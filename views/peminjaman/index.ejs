<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Daftar Peminjaman</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
  <div class="container mt-4">

    <!-- Tombol Kembali ke Dashboard -->
    <a href="/dashboard" class="btn btn-secondary mb-3">Kembali ke Dashboard</a>

    <h1 class="mb-4">Daftar Peminjaman</h1>

    <a href="/peminjaman/tambah" class="btn btn-primary mb-3">Tambah Peminjaman</a>

    <!-- Filter Form -->
    <form method="GET" action="/peminjaman" class="row mb-3">
      <div class="col-md-3">
        <input type="text" name="nama" class="form-control" placeholder="Cari Nama" value="<%= query?.nama || '' %>">
      </div>
      <div class="col-md-3">
        <select name="status" class="form-select">
          <option value="">-- Semua Status --</option>
          <option value="dipinjam" <%= query?.status === 'dipinjam' ? 'selected' : '' %>>Dipinjam</option>
          <option value="dikembalikan" <%= query?.status === 'dikembalikan' ? 'selected' : '' %>>Dikembalikan</option>
        </select>
      </div>
      <div class="col-md-3">
        <input type="date" name="tanggalPinjam" class="form-control" value="<%= query?.tanggalPinjam || '' %>">
      </div>
      <div class="col-md-3">
        <button type="submit" class="btn btn-secondary w-100">Filter</button>
      </div>
    </form>

    <!-- Table Peminjaman -->
    <table class="table table-bordered table-striped">
      <thead class="table-dark">
        <tr>
          <th>Nama</th>
          <th>Kontak</th>
          <th>Barang Dipinjam</th>
          <th>Tanggal Pinjam</th>
          <th>Tanggal Kembali</th>
          <th>Status</th>
          <th>Aksi</th>
        </tr>
      </thead>
      <tbody>
        <% peminjaman.forEach(item => { %>
          <tr>
            <td><%= item.nama %></td>
            <td><%= item.kontak %></td>
            <td><%= item.barangDipinjam ? item.barangDipinjam.nama : 'Barang tidak ditemukan' %></td>
            <td><%= item.tanggalPinjam ? item.tanggalPinjam.toLocaleDateString() : '-' %></td>
            <td><%= item.tanggalKembali ? item.tanggalKembali.toLocaleDateString() : '-' %></td>
            <td>
              <%= item.status === 'dikembalikan' ? 'Sudah Dikembalikan' : 'Dipinjam' %>
            </td>
            <td>
              <!-- Tombol Edit -->
              <a href="/peminjaman/edit/<%= item._id %>" class="btn btn-warning btn-sm me-1">Edit</a>

              <!-- Form Hapus -->
              <form action="/peminjaman/hapus/<%= item._id %>" method="POST" style="display:inline-block;" onsubmit="return confirm('Yakin ingin menghapus data ini?');">
                <button type="submit" class="btn btn-danger btn-sm me-1">Hapus</button>
              </form>

              <!-- Form Kembalikan -->
              <% if (item.status !== 'dikembalikan') { %>
                <form action="/peminjaman/kembalikan/<%= item._id %>" method="POST" style="display:inline-block;" onsubmit="return confirm('Yakin ingin mengembalikan barang ini?');">
                  <button type="submit" class="btn btn-success btn-sm">Kembalikan</button>
                </form>
              <% } %>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
