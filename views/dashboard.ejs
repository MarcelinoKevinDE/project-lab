<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Dashboard</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
  <link href="https://fonts.googleapis.com/css2?family=Poppins&display=swap" rel="stylesheet" />
  <link rel="stylesheet" href="/styles/dashboard.css" />
</head>
<body class="container-bg">

<!-- === TOP NAVBAR (Replaces Sidebar) === -->
<nav id="top-navbar" class="navbar navbar-expand-lg py-3 px-4 border-bottom bg-white fixed-top">
  <div class="container-fluid">
    <div class="d-flex align-items-center gap-3">
      <img src="https://tse1.mm.bing.net/th?id=OIP.mPwOUdw3GDkhtzkVyqABGgHaHK&pid=Api&rs=1" alt="Logo Unilak" width="50" height="50" style="object-fit: contain;" />
      <div class="d-flex flex-column">
        <h5 class="mb-0 fw-bold text-dark">Fakultas Ilmu Komputer</h5>
        <small class="text-muted">Universitas Lancang Kuning</small>
      </div>
    </div>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navMenu" aria-controls="navMenu" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse mt-3 mt-lg-0" id="navMenu">
      <ul class="navbar-nav ms-auto d-flex align-items-lg-center gap-lg-3">
        <li class="nav-item"><a href="/dashboard" class="nav-link"><i class="bi bi-speedometer2"></i> Dashboard</a></li>
        <% if (role === 'admin') { %>
          <li class="nav-item"><a href="/barang" class="nav-link"><i class="bi bi-box"></i> Barang</a></li>
        <% } %>
        <li class="nav-item"><a href="/peminjaman" class="nav-link"><i class="bi bi-clipboard-check"></i> Peminjaman</a></li>
        <li class="nav-item"><a href="/pengaturan" class="nav-link"><i class="bi bi-gear"></i> Pengaturan</a></li>
        <li class="nav-item"><a href="/logout" class="nav-link text-danger"><i class="bi bi-box-arrow-right"></i> Logout</a></li>
      </ul>
    </div>
  </div>
</nav>

<!-- === MAIN CONTENT === -->
<div class="main-content" id="main-content">
  <div class="centered-content">

    <!-- SELAMAT DATANG -->
    <div class="card mb-4 p-4 border-0 rounded-4 w-100" style="background-color: rgba(0,0,0,0.6); color: #fff;">
      <h4 class="fw-semibold mb-1">Selamat datang, <%= username %>!</h4>
      <p class="mb-0">Role kamu: <strong><%= role %></strong></p>
    </div>

    <!-- SEARCH BAR -->
    <div class="search-box mb-4">
      <form action="/dashboard/search" method="GET" class="input-group">
        <input type="text" name="q" class="form-control" placeholder="Cari barang atau peminjam..." required>
        <button type="submit" class="btn btn-outline-light bg-dark text-white"><i class="bi bi-search"></i></button>
      </form>
    </div>

    <!-- CARD BARANG -->
    <% if (barangList && barangList.length > 0) { %>
    <div class="card shadow-sm mt-4 p-4 border-0 rounded-4 w-100">
      <h4 class="mb-3 text-dark text-center">Daftar Barang & Ketersediaan</h4>
      <div class="card-grid">
        <% barangList.forEach(barang => {
          const persentase = barang.jumlah > 0 ? Math.round((barang.tersedia / barang.jumlah) * 100) : 0;
          let warna = 'progress-bar bg-success';
          if (persentase < 30) warna = 'progress-bar bg-danger';
          else if (persentase < 60) warna = 'progress-bar bg-warning';
        %>
        <div class="card shadow-sm h-100 p-3">
          <div class="card-body p-0">
            <h6 class="card-title mt-2"><%= barang.nama %></h6>
            <p class="text-muted mb-1">Tersedia: <strong><%= barang.tersedia %></strong> dari <%= barang.jumlah %></p>
            <div class="progress mb-2">
              <div class="<%= warna %>" role="progressbar" aria-valuenow="<%= persentase %>" aria-valuemin="0" aria-valuemax="100" data-width="<%= persentase %>">
                <%= persentase %>%</div>
            </div>
            <% if (barang.keterangan) { %>
              <small class="text-muted d-block"><%= barang.keterangan %></small>
            <% } %>
          </div>
        </div>
        <% }); %>
      </div>
    </div>
    <% } %>

    <!-- PROMO -->
    <div class="card shadow-sm mt-5 p-4 border-0 rounded-4 w-100" style="background-color: rgba(0,0,0,0.6); color: #fff;">
      <h4 class="mb-1">Falsilkom UNILAK Berkualitas!</h4>
      <p class="mb-3">Terbukti Berkualitas</p>
      <div class="d-flex justify-content-center gap-4">
        <a href="https://www.instagram.com/fasilkomunilak/" target="_blank" title="Instagram" style="color: #fff; font-size: 1.4rem;"><i class="bi bi-instagram"></i></a>
        <a href="https://x.com/fasilkomunilak" target="_blank" title="Twitter/X" style="color: #fff; font-size: 1.4rem;"><i class="bi bi-twitter"></i></a>
        <a href="https://wa.me/628117532015" target="_blank" title="WhatsApp" style="color: #fff; font-size: 1.4rem;"><i class="bi bi-whatsapp"></i></a>
      </div>
    </div>

  </div>
</div>

<!-- SCRIPT: Progress bar auto width -->
<script>
  document.addEventListener('DOMContentLoaded', () => {
    document.querySelectorAll('.progress-bar').forEach(bar => {
      const w = bar.getAttribute('data-width');
      if (w) {
        bar.style.width = w + '%';
      }
    });
  });
</script>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
