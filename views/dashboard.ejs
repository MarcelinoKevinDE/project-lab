<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Dashboard</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=Poppins&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/styles/dashboard.css">
  <style>
    .card:hover {
      transform: scale(1.03);
      transition: 0.3s;
    }
  </style>
</head>
<body class="container-bg">

<!-- Navbar -->
<nav id="top-navbar" class="navbar navbar-expand-lg py-3 px-4 border-bottom bg-white fixed-top">
  <div class="container-fluid">
    <div class="d-flex align-items-center gap-3">
      <img src="https://tse1.mm.bing.net/th?id=OIP.mPwOUdw3GDkhtzkVyqABGgHaHK&pid=Api&rs=1" alt="Logo Universitas Lancang Kuning" width="50" height="50" style="object-fit: contain;">
      <div class="d-flex flex-column">
        <h5 class="mb-0 fw-bold text-dark">Fakultas Ilmu Komputer</h5>
        <small class="text-muted">Universitas Lancang Kuning</small>
      </div>
    </div>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navMenu">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse mt-3 mt-lg-0" id="navMenu">
      <ul class="navbar-nav ms-auto d-flex align-items-lg-center gap-lg-3">
        <li class="nav-item"><a href="/dashboard" class="nav-link"><i class="bi bi-speedometer2"></i> Dashboard</a></li>
        <% if (role === 'admin') { %>
          <li class="nav-item"><a href="/barang" class="nav-link"><i class="bi bi-box"></i> Barang</a></li>
        <% } %>
        <li class="nav-item"><a href="/peminjaman" class="nav-link"><i class="bi bi-clipboard-check"></i> Peminjaman</a></li>
        <li class="nav-item"><a href="/pengaturan" class="nav-link"><i class="bi bi-gear"></i> Pengaturan</a></li>
        <li class="nav-item"><a href="/logout" class="nav-link text-danger"><i class="bi bi-box-arrow-right"></i> Logout</a></li>
      </ul>
    </div>
  </div>
</nav>

<!-- Main Content -->
<div class="main-content" id="main-content">
  <div class="centered-content">

    <!-- Welcome Card -->
    <div class="card mb-4 p-4 border-0 rounded-4 w-100" style="background-color: rgba(0,0,0,0.6); color: #fff;">
      <h4 class="fw-semibold mb-1">Selamat datang, <%= username %>!</h4>
      <p class="mb-0">Role kamu: <strong><%= role %></strong></p>
    </div>

    <!-- Statistik Ringkas -->
    <div class="row mb-4">
      <div class="col-md-4 mb-3">
        <div class="card p-3 shadow-sm border-0 rounded-4" style="background-color: rgba(0,0,0,0.6); color: #fff;">
          <h6>Total Barang</h6>
          <h4><%= totalBarang %></h4>
        </div>
      </div>
      <div class="col-md-4 mb-3">
        <div class="card p-3 shadow-sm border-0 rounded-4" style="background-color: rgba(0,0,0,0.6); color: #fff;">
          <h6>Barang Tersedia</h6>
          <h4><%= totalTersedia %></h4>
        </div>
      </div>
      <div class="col-md-4 mb-3">
        <div class="card p-3 shadow-sm border-0 rounded-4" style="background-color: rgba(0,0,0,0.6); color: #fff;">
          <h6>Peminjaman Aktif</h6>
          <h4><%= totalPeminjaman %></h4>
        </div>
      </div>
    </div>

    <!-- Search -->
    <div class="search-box mb-4">
      <form action="/dashboard/search" method="GET" class="input-group">
        <input type="text" name="q" class="form-control" placeholder="Cari barang atau peminjam..." required>
        <button type="submit" class="btn" style="background-color: rgba(0,0,0,0.6); color: #fff;"><i class="bi bi-search"></i></button>
      </form>
    </div>

    <!-- Barang Card List -->
    <% if (barangList && barangList.length > 0) { %>
      <div class="card shadow-sm mt-4 p-4 border-0 rounded-4 w-100" style="background-color: rgba(0,0,0,0.6); color: #fff;">
        <h4 class="mb-3 text-center">Daftar Barang & Ketersediaan</h4>
        <div class="card-grid">
          <% barangList.forEach(barang => { 
            const persentase = barang.jumlah > 0 ? Math.round((barang.tersedia / barang.jumlah) * 100) : 0;
            let warna = 'progress-bar bg-success';
            if (persentase < 30) warna = 'progress-bar bg-danger';
            else if (persentase < 60) warna = 'progress-bar bg-warning';
          %>
          <div class="card shadow-sm h-100 p-3" style="background-color: #ffffff; color: #000;">
            <div class="card-body p-0">
              <h6 class="card-title mt-2"><%= barang.nama %></h6>
              <p class="mb-1">Tersedia: <strong><%= barang.tersedia %></strong> dari <%= barang.jumlah %> 
                <% if (persentase === 0) { %>
                  <span class="badge bg-danger">Habis</span>
                <% } else if (persentase < 30) { %>
                  <span class="badge bg-warning">Hampir Habis</span>
                <% } else { %>
                  <span class="badge bg-success">Aman</span>
                <% } %>
              </p>
              <div class="progress mb-2">
                <div class="<%= warna %>" role="progressbar" aria-valuenow="<%= persentase %>" aria-valuemin="0" aria-valuemax="100" data-width="<%= persentase %>">
                  <%= persentase %>%</div>
              </div>
              <% if (barang.keterangan) { %>
                <small class="d-block"><%= barang.keterangan %></small>
              <% } %>
            </div>
          </div>
          <% }); %>
        </div>
      </div>
    <% } %>

    <!-- Promo Section -->
    <div class="card shadow-sm mt-5 p-4 border-0 rounded-4 w-100" style="background-color: rgba(0,0,0,0.6); color: #fff;">
      <h4 class="mb-1">Fasilkom UNILAK Berkualitas!</h4>
      <p class="mb-3">Terbukti Berkualitas</p>
      <div class="d-flex justify-content-center gap-4">
        <a href="https://www.instagram.com/fasilkomunilak/" target="_blank" class="text-white fs-4"><i class="bi bi-instagram"></i></a>
        <a href="https://x.com/fasilkomunilak" target="_blank" class="text-white fs-4"><i class="bi bi-twitter"></i></a>
        <a href="https://wa.me/628117532015" target="_blank" class="text-white fs-4"><i class="bi bi-whatsapp"></i></a>
      </div>
    </div>

    <!-- Tim Developer -->
    <div class="card shadow-sm mt-5 p-4 border-0 rounded-4 w-100" style="background-color: rgba(0,0,0,0.6); color: #fff;">
      <h3 class="fw-bold text-center">Admin & Web Development Team</h3>
      <p class="text-white-50 text-center mb-4">We Create, We Maintain, We Innovate.</p>
      <div class="row justify-content-center">
        <div class="col-md-3 col-sm-6 mb-4">
          <div class="card shadow-sm p-3 h-100 border-0" style="background-color: #ffffff; color: #000;">
            <img src="/images/admin-kevin.jpg" class="rounded-circle mx-auto d-block img-fluid" style="width: 150px; height: 150px; object-fit: cover;" alt="Foto Marcelino Kevin">
            <h5 class="mt-3 text-center">Marcelino Kevin D.E</h5>
            <p class="text-secondary text-center">Lead Developer</p>
            <p class="text-center">ðŸ“ž 0895-1637-8382</p>
            <p class="text-center">ðŸ“§ MarcelinoKevinDE@gmail.com</p>
          </div>
        </div>
        <div class="col-md-3 col-sm-6 mb-4">
          <div class="card shadow-sm p-3 h-100 border-0" style="background-color: #ffffff; color: #000;">
            <img src="/images/admin-rian.jpg" class="rounded-circle mx-auto d-block img-fluid" style="width: 150px; height: 150px; object-fit: cover;" alt="Foto Januar Rian">
            <h5 class="mt-3 text-center">Januar Rian Prakasa</h5>
            <p class="text-secondary text-center">System Administrator</p>
