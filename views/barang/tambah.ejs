<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Tambah Peminjaman</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
  <div class="container mt-5" style="max-width: 600px;">
    <h2>Tambah Peminjaman</h2>

    <% if (error) { %>
      <div class="alert alert-danger"><%= error %></div>
    <% } %>

    <form action="/peminjaman/tambah" method="POST" novalidate>
      <div class="mb-3">
        <label for="nama" class="form-label">Nama Peminjam</label>
        <input 
          type="text" 
          class="form-control <%= error && !oldInput.nama ? 'is-invalid' : '' %>" 
          id="nama" 
          name="nama" 
          value="<%= oldInput.nama || '' %>" 
          required 
        />
        <% if (error && !oldInput.nama) { %>
          <div class="invalid-feedback">Nama wajib diisi</div>
        <% } %>
      </div>

      <div class="mb-3">
        <label for="kontak" class="form-label">Kontak</label>
        <input 
          type="text" 
          class="form-control <%= error && !oldInput.kontak ? 'is-invalid' : '' %>" 
          id="kontak" 
          name="kontak" 
          value="<%= oldInput.kontak || '' %>" 
          required 
        />
        <% if (error && !oldInput.kontak) { %>
          <div class="invalid-feedback">Kontak wajib diisi</div>
        <% } %>
      </div>

      <div class="mb-3">
        <label for="tanggalPinjam" class="form-label">Tanggal Pinjam</label>
        <input 
          type="date" 
          class="form-control" 
          id="tanggalPinjam" 
          name="tanggalPinjam" 
          value="<%= oldInput.tanggalPinjam || '' %>" 
        />
      </div>

      <div class="mb-3">
        <label for="tanggalKembali" class="form-label">Tanggal Kembali</label>
        <input 
          type="date" 
          class="form-control" 
          id="tanggalKembali" 
          name="tanggalKembali" 
          value="<%= oldInput.tanggalKembali || '' %>" 
        />
      </div>

      <div class="mb-3">
        <label for="barangDipinjam" class="form-label">Barang Dipinjam</label>
        <select 
          id="barangDipinjam" 
          name="barangDipinjam" 
          class="form-select <%= error && !oldInput.barangDipinjam ? 'is-invalid' : '' %>" 
          required
        >
          <option value="">-- Pilih Barang --</option>
          <% barangs.forEach(barang => { %>
            <option 
              value="<%= barang._id %>" 
              <%= oldInput.barangDipinjam == barang._id ? 'selected' : '' %>>
              <%= barang.nama %>
            </option>
          <% }) %>
        </select>
        <% if (error && !oldInput.barangDipinjam) { %>
          <div class="invalid-feedback">Barang wajib dipilih</div>
        <% } %>
      </div>

      <button type="submit" class="btn btn-primary">Tambah</button>
      <a href="/peminjaman" class="btn btn-secondary ms-2">Batal</a>
    </form>
  </div>
</body>
</html>
