<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Edit Barang</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
  <div class="container mt-5" style="max-width: 700px;">
    <h2>Edit Barang</h2>

    <% if (error) { %>
      <div class="alert alert-danger"><%= error %></div>
    <% } %>

    <form action="/barang/edit/<%= barang._id %>" method="POST" novalidate>
      <div class="mb-3">
        <label for="nama" class="form-label">Nama Barang</label>
        <input
          type="text"
          class="form-control <%= error && !barang.nama ? 'is-invalid' : '' %>"
          id="nama"
          name="nama"
          required
          value="<%= barang.nama %>"
        />
      </div>
      <div class="mb-3">
        <label for="jumlah" class="form-label">Jumlah</label>
        <input
          type="number"
          min="0"
          class="form-control <%= error && (!barang.jumlah || barang.jumlah < 0) ? 'is-invalid' : '' %>"
          id="jumlah"
          name="jumlah"
          required
          value="<%= barang.jumlah %>"
        />
      </div>
      <div class="mb-3">
        <label for="keterangan" class="form-label">Keterangan</label>
        <textarea class="form-control" id="keterangan" name="keterangan"><%= barang.keterangan %></textarea>
      </div>
      <button type="submit" class="btn btn-primary">Update</button>
      <a href="/barang" class="btn btn-secondary ms-2">Batal</a>
    </form>

    <hr class="my-5">

    <h4>Daftar Semua Barang</h4>
    <table class="table table-bordered mt-3">
      <thead class="table-light">
        <tr>
          <th>Nama</th>
          <th>Jumlah</th>
          <th>Keterangan</th>
          <th>Terakhir Diubah Oleh</th>
          <th>Aksi</th>
        </tr>
      </thead>
      <tbody>
        <% if (barangs && barangs.length > 0) { %>
          <% barangs.forEach(barang => { %>
            <tr>
              <td><%= barang.nama %></td>
              <td><%= barang.jumlah %></td>
              <td><%= barang.keterangan %></td>
              <td><%= barang.dieditOleh || '-' %></td>
              <td>
                <a href="/barang/edit/<%= barang._id %>" class="btn btn-warning btn-sm">Edit</a>
                <a href="/barang/hapus/<%= barang._id %>" class="btn btn-danger btn-sm" onclick="return confirm('Hapus barang ini?')">Hapus</a>
              </td>
            </tr>
          <% }) %>
        <% } else { %>
          <tr>
            <td colspan="5" class="text-center">Belum ada barang.</td>
          </tr>
        <% } %>
      </tbody>
    </table>
  </div>
</body>
</html>
