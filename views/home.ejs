  <style>
    body {
      margin: 0;
      font-family: 'Roboto', sans-serif; /* Menggunakan font Roboto */
      background: #f0f0f0;
    }

    /* Style untuk Topbar */
    .topbar {
      background: #1d3557;
      color: white;
      height: 60px;
      padding: 0 20px;
      position: fixed;
      top: 0;
      left: 0;
      right: 0;
      display: flex;
      align-items: center;
      z-index: 1000;
    }

    .topbar .menu-toggle {
      font-size: 24px;
      cursor: pointer;
    }

    .topbar img {
      height: 40px;
      margin: 0 15px;
    }

    .topbar .title {
      font-size: 18px;
      font-weight: bold;
    }

    /* Sidebar Style */
    .sidebar {
      position: fixed;
      top: 60px;
      left: -250px;
      width: 250px;
      height: 100%;
      background: #1d3557;
      transition: .3s;
      padding-top: 20px;
      z-index: 999;
    }

    .sidebar.show {
      left: 0;
    }

    .sidebar a {
      color: white;
      padding: 12px 20px;
      display: block;
      text-decoration: none;
      border-bottom: 1px solid #ffffff22;
    }

    .sidebar a:hover {
      background: #457b9d;
    }

    /* Main Content Style */
    .main {
      margin-top: 60px;
      padding: 20px;
      transition: margin-left .3s;
    }

    .main.shift {
      margin-left: 250px;
    }

    /* Hero Banner Images */
    .hero img {
      width: 100%;
      height: auto;
      border-radius: 8px;
      margin-bottom: 20px;
      display: block;
    }

    /* Section Card Style */
    .section-card {
      background: white;
      padding: 20px;
      margin: 20px auto;
      border-radius: 8px;
      max-width: 900px;
      box-shadow: 0 2px 6px rgba(0,0,0,0.1);
      text-align: justify;
    }

    .section-card h2 {
      margin-top: 0;
      color: #1d3557;
    }

    .section-card ul {
      padding-left: 20px;
    }

    .section-card ul li {
      margin: 6px 0;
    }

    /* Footer Style */
    .footer {
      background: #1d3557;
      color: white;
      padding: 30px 20px;
      text-align: center;
      font-size: 14px;
    }

    .footer-columns {
      display: flex;
      flex-wrap: wrap;
      justify-content: space-around;
      text-align: left;
      margin-bottom: 20px;
    }

    .footer-column {
      flex: 1 1 200px;
      margin: 10px;
    }

    .footer-column h4 {
      border-bottom: 1px solid #ffffff33;
      padding-bottom: 5px;
      margin-bottom: 10px;
    }

    @media (max-width: 768px) {
      .footer-columns {
        flex-direction: column;
      }
    }

    /* Teks di atas banner */
    .welcome-message {
      background-color: #1d3557;
      color: white;
      text-align: justify; /* Rata kiri-kanan */
      padding: 30px 20px;
      font-size: 18px;
      font-weight: normal;
      line-height: 1.6;
    }

    .welcome-message h1 {
      margin: 0;
      font-size: 28px;
      font-weight: bold;
      text-align: left;
    }

    .welcome-message ul {
      list-style-type: none;
      padding: 0;
    }

    .welcome-message ul li {
      margin: 10px 0;
      font-size: 18px;
      display: flex;
      align-items: center;
    }

    .welcome-message ul li i {
      margin-right: 15px;
      color: #ffcc00; /* Warna ikon */
    }

    .welcome-message h2 {
      font-size: 22px;
      font-weight: bold;
      margin-top: 20px;
    }
  </style>
</head>
