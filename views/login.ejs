<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8"/>
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Login / Sign Up</title>
  <style>
    * { box-sizing: border-box; margin:0; padding:0; font-family:sans-serif; }
    body {
      display:flex; align-items:center; justify-content:center;
      height:100vh; background:#f0f4f8;
    }
    .wrapper { perspective:1000px; }
    .card-switch {
      width:350px; height:460px; position:relative;
    }
    .switch { display:block; width:100%; height:100%; cursor:pointer; }
    .toggle { display:none; }
    .slider, .card-side { display:none; }
    .flip-card__inner {
      width:100%; height:100%;
      transition: transform .6s; transform-style:preserve-3d;
      position:relative;
    }
    .toggle:checked ~ .slider ~ .card-side ~ .flip-card__inner {
      transform: rotateY(180deg);
    }
    .flip-card__front,
    .flip-card__back {
      position:absolute; width:100%; height:100%;
      background:#fff; border-radius:12px;
      box-shadow:0 8px 24px rgba(0,0,0,0.1);
      backface-visibility:hidden;
      padding:30px;
    }
    .flip-card__back { transform:rotateY(180deg); }
    .title {
      font-size:1.8rem; text-align:center;
      color:#1e88e5; margin-bottom:20px;
    }
    .flip-card__form {
      display:flex; flex-direction:column;
    }
    .flip-card__input {
      padding:12px; margin-bottom:15px;
      border:1px solid #ccc; border-radius:8px;
      font-size:1rem;
    }
    .flip-card__btn {
      padding:12px; background:#1e88e5;
      color:#fff; border:none; border-radius:8px;
      font-size:1rem; cursor:pointer;
      transition:background .3s;
    }
    .flip-card__btn:hover { background:#1565c0; }

    /* Added Remember me & Forgot */
    .remember-forgot {
      display:flex; justify-content:space-between;
      align-items:center; font-size:.9rem;
      margin-bottom:15px;
    }
    .remember-forgot label {
      display:flex; align-items:center;
      font-size:.9rem;
    }
    .remember-forgot input { margin-right:6px; }
    .remember-forgot a {
      color:#1e88e5; text-decoration:none;
    }
    .remember-forgot a:hover { text-decoration:underline; }
  </style>
</head>
<body>
  <div class="wrapper">
    <div class="card-switch">
      <label class="switch">
        <input type="checkbox" class="toggle">
        <span class="slider"></span>
        <span class="card-side"></span>

        <div class="flip-card__inner">
          <!-- LOGIN SIDE -->
          <div class="flip-card__front">
            <div class="title">Log in</div>
            <form action="/login" method="POST" class="flip-card__form">
              <input type="text" name="username" placeholder="Username" class="flip-card__input" required autofocus>
              <input type="password" name="password" placeholder="Password" class="flip-card__input" required>

              <div class="remember-forgot">
                <label><input type="checkbox" name="remember"> Remember me</label>
                <a href="/forgot-password">Forgot password?</a>
              </div>

              <button type="submit" class="flip-card__btn">Letâ€™s go!</button>
            </form>
          </div>

          <!-- SIGN UP SIDE -->
          <div class="flip-card__back">
            <div class="title">Sign up</div>
            <form action="/register" method="POST" class="flip-card__form">
              <input type="text" name="name" placeholder="Name" class="flip-card__input" required>
              <input type="text" name="username" placeholder="Username" class="flip-card__input" required>
              <input type="password" name="password" placeholder="Password" class="flip-card__input" required>
              <button type="submit" class="flip-card__btn">Confirm!</button>
            </form>
          </div>
        </div>
      </label>
    </div>
  </div>
</body>
</html>
